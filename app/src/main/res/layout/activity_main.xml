<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.jorgeiiavila.carcrash.MainActivity">

    <Button
        android:id="@+id/playBtn"
        android:layout_width="105dp"
        android:layout_height="107dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/play_cta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/changeCarBtn"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:layout_marginBottom="73dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/change_car_cta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:layout_marginBottom="73dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/settings_cta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/carImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/player_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
